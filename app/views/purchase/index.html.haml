.buy-container
  = render "users/login-header"
  .buy-main
    %section.buy-item-container
      %h2 購入内容の確認
      %section.buy-content
        .buy-content__inner
          %h3.buy-item-image
            = image_tag @sellitem.images[0].gazou.url, height: "64px" , width: "64px"
          %p.buy-item-name
            = @sellitem.name
          %form.buy-form
            %p.buy-price 
              = @sellitem.price
              %span 
                円(送料込み)
            .buy-price-table
              .buy-price-table__left 支払い金額 
              .buy-price-table__right
                %span
                  = @sellitem.price.to_s
            = link_to "購入する", pay_sell_purchase_index_path(@sellitem),method: :post, class:"btn-default"
 

      %section.user-info
        .buy-content__inner
          %h3 配送先
          .user-address
            = @user.post_number.to_s
            %br
              = @user.prefecture + @user.city + @user.street + @user.building
            %br
              = @user.first_name + " " + @user.last_name
          .user-info-fix
            = link_to "#" do
              変更する
              %i.fa.fa-chevron-right

      %section.user-info
        .buy-content__inner
          %h3 支払い方法
          - if @default_card_information.blank?
            %br /
          - else
            = "**** **** **** " + @default_card_information.last4
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
          
          .user-info-fix
            = link_to "#" do
              変更する
              %i.fa.fa-chevron-right

  = render "users/login-footer"